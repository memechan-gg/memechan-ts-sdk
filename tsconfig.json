{
  "compilerOptions": {
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": false,
    "strict": true,
    "target": "ES2021",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowJs": true
  },
  "compileOnSave": true,
  "include": ["src", ".eslintrc.js", "examples", "tests", "jest.config.js"]
}
